<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <EditText
        android:id="@+id/editText"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:gravity="end|bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="6"
        android:inputType="text"
        android:text="@string/_0"
        android:padding="10dp"/>



    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:columnCount="4"
        app:rowCount="5"
        android:paddingVertical="8dp"
        android:paddingHorizontal="15dp">
        <Button
            android:id="@+id/but_ac"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="AC"
            android:textSize="24sp"
            app:layout_column="3"
            app:layout_row="0"
            android:backgroundTint="#D31616"/>

        <Button
            android:id="@+id/but_7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:text="7"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_row="1"
            android:backgroundTint="@color/grey"/>

        <Button
            android:id="@+id/but_8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="24sp"
            android:text="8"
            app:layout_column="1"
            app:layout_row="1"
            android:layout_margin="8dp"
            android:backgroundTint="@color/grey"/>

        <Button
            android:id="@+id/but_9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="24sp"
            android:layout_margin="8dp"
            android:text="9"
            app:layout_column="2"
            app:layout_row="1"
            android:backgroundTint="@color/grey"/>

        <Button
            android:id="@+id/but_plus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="24sp"
            android:layout_margin="8dp"
            android:text="+"
            app:layout_column="3"
            app:layout_row="1"
            android:backgroundTint="@color/orange"/>

        <Button
            android:id="@+id/but_4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="4"
            app:layout_column="0"
            app:layout_row="2"
            android:textSize="24sp"
            android:layout_margin="8dp"
            android:backgroundTint="@color/grey"/>

        <Button
            android:id="@+id/but_5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="24sp"
            android:text="5"
            app:layout_column="1"
            app:layout_row="2"
            android:layout_margin="8dp"
            android:backgroundTint="@color/grey"/>

        <Button
            android:id="@+id/but_6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="24sp"
            android:layout_margin="8dp"
            android:text="6"
            app:layout_column="2"
            app:layout_row="2"
            android:backgroundTint="@color/grey"/>

        <Button
            android:id="@+id/but_min"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="24sp"
            android:layout_margin="8dp"
            android:text="â€”"
            app:layout_column="3"
            app:layout_row="2"
            android:backgroundTint="@color/orange"/>

        <Button
            android:id="@+id/but_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="1"
            app:layout_column="0"
            app:layout_row="3"
            android:textSize="24sp"
            android:layout_margin="8dp"
            android:backgroundTint="@color/grey"/>

        <Button
            android:id="@+id/but_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="24sp"
            android:text="2"
            app:layout_column="1"
            app:layout_row="3"
            android:layout_margin="8dp"
            android:backgroundTint="@color/grey"/>

        <Button
            android:id="@+id/but_3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="24sp"
            android:layout_margin="8dp"
            android:text="3"
            app:layout_column="2"
            app:layout_row="3"
            android:backgroundTint="@color/grey"/>

        <Button
            android:id="@+id/but_dob"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="24sp"
            android:layout_margin="8dp"
            android:text="*"
            app:layout_column="3"
            app:layout_row="3"
            android:backgroundTint="@color/orange"/>
        <Button
            android:id="@+id/but_0"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="0"
            app:layout_column="0"
            app:layout_row="4"
            android:textSize="24sp"
            android:layout_margin="8dp"
            android:backgroundTint="@color/grey"/>

        <Button
            android:id="@+id/but_koma"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="24sp"
            android:text=","
            app:layout_column="1"
            app:layout_row="4"
            android:layout_margin="8dp"
            android:backgroundTint="@color/grey"/>

        <Button
            android:id="@+id/but_eq"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="24sp"
            android:layout_margin="8dp"
            android:text="="
            app:layout_column="2"
            app:layout_row="4"
            android:backgroundTint="@color/orange"/>

        <Button
            android:id="@+id/but_del"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="24sp"
            android:layout_margin="8dp"
            android:text="/"
            app:layout_column="3"
            app:layout_row="4"
            android:backgroundTint="@color/orange"/>

    </androidx.gridlayout.widget.GridLayout>


</LinearLayout>